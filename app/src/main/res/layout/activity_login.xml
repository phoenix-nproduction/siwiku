<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        >

        <ImageView
            android:id="@+id/back_signAwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_18sdp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/unlocked"
            android:layout_marginBottom="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="@dimen/_30sdp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/btn_onboarding2"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:alpha=".5"
            />

        <EditText
            android:id="@+id/EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:ems="100"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Email"
            android:textColor="@color/btn_onboarding"
            android:textColorHint="@color/btn_onboarding"
            android:inputType="textEmailAddress"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <EditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:ems="100"
                android:fontFamily="@font/poppins_medium"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/btn_onboarding"
                android:textColorHint="@color/btn_onboarding" />

            <ImageView
                android:id="@+id/show_pass_btn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/show_password"
                android:alpha=".5"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textAlignment="textEnd"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/btn_onboarding"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/white"
            android:background="@drawable/ic_buttonstylelogin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/grey"
                />

            <TextView
                android:id="@+id/signup_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/btn_onboarding"
                />
        </LinearLayout>

            </LinearLayout>

</ScrollView>