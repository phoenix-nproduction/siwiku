<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/column_item_style"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_18sdp"
    android:layout_marginEnd="@dimen/_18sdp"
    android:elevation="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    android:padding="@dimen/_8sdp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="match_parent"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_4sdp"
        >

        <ImageView
            android:id="@+id/image_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@color/white"
            />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_90sdp"
        >
        <TextView
            android:id="@+id/title_wisata"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Tenjo Laut (HighLand) Palutungan"
            android:textColor="@color/btn_onboarding"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/alamat_wisata"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Dusun Palutungan, Desa Cisantana, Kecamatan Cigugur"
            android:textSize="@dimen/_8sdp"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/next_item_btn"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="match_parent"
        android:background="@drawable/next_item"
        android:src="@drawable/baseline_navigate_next_24"
        android:layout_gravity="end"
        />

</androidx.cardview.widget.CardView>